<header class="bg-white">
  <div class="max-w-7xl mx-auto flex justify-between items-center py-4">
    <div class="flex-shrink-0 flex items-center">
      <a href="/ar/" class="text-dark font-bold text-xl">
        <img src="/assets/images/techmo-logo.png" alt="Techmo" class="h-8 w-auto">
      </a>
    </div>
    <nav class="hidden md:flex space-x-8 items-center">
      {% for item in navigation.main %}
      <a href="{{ item.url }}" class="text-gray-600 hover:text-dark">{{ item.text }}</a>
      {% endfor %}
      <a href="https://simulador.techmo.global" class="inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-dark bg-primary hover:bg-primary/90">
        Simular crédito
      </a>
    </nav>
    <div class="flex items-center md:hidden">
      <button type="button" class="text-gray-600 hover:text-dark mobile-menu-button" aria-expanded="false" aria-controls="mobile-menu">
        <span class="sr-only">Abrir menú principal</span>
        <svg class="h-6 w-6" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
        </svg>
      </button>
    </div>
  </div>
  
  <!-- Menú móvil -->
  <div class="md:hidden hidden mobile-menu absolute top-20 left-0 right-0 bg-white z-20 p-4 border-t border-gray-100 shadow-lg">
    <div class="px-2 pt-2 pb-3 space-y-1">
      {% for item in navigation.main %}
      <a href="{{ item.url }}" class="block px-3 py-2 rounded-md text-gray-700 font-medium hover:bg-gray-100">{{ item.text }}</a>
      {% endfor %}
      <a href="https://simulador.techmo.global" class="block px-3 py-2 mt-4 text-center rounded-md text-dark bg-primary font-medium">
        Simular crédito
      </a>
    </div>
  </div>
</header>
