            <img src="/assets/images/supervielle.png" alt="Supervielle" class="h-10 object-contain">
            <img src="/assets/images/mila.png" alt="Mila" class="h-10 object-contain">
          </div>
        </div>
      </div>
    </div>
  </div>

  <script>
    document.addEventListener('DOMContentLoaded', function() {
      const solutionLinks = {
        'prendarios': document.getElementById('link-prendarios'),
        'particulares': document.getElementById('link-particulares'),
        'agencias': document.getElementById('link-agencias')
      };

      const solutionCards = document.querySelectorAll('.solution-card');
      const mobileSolutionCards = {
        'prendarios': document.getElementById('mobile-solution-prendarios'),
        'particulares': document.getElementById('mobile-solution-particulares'),
        'agencias': document.getElementById('mobile-solution-agencias')
      };
      
      const solutionsContainer = document.getElementById('solutions-cards-container');
      const solutionsSection = document.getElementById('solutions-section');
      
      // Función para mostrar una solución específica
      window.showSolution = function(solutionId) {
        // Resetear todos los enlaces
        Object.values(solutionLinks).forEach(link => {
          link.classList.remove('text-primary', 'text-[#0088a9]', 'text-black', 'font-semibold');
          link.classList.add('text-gray-500');
          link.querySelector('span').classList.remove('bg-primary', 'bg-[#0088a9]', 'bg-black');
          link.querySelector('span').classList.add('bg-transparent');
        });

        // Activar el enlace correspondiente con el color adecuado
        const activeLink = solutionLinks[solutionId];
        activeLink.classList.remove('text-gray-500');

        if (solutionId === 'prendarios') {
          activeLink.classList.add('text-primary', 'font-semibold');
          activeLink.querySelector('span').classList.add('bg-primary');
        } else if (solutionId === 'particulares') {
          activeLink.classList.add('text-[#0088a9]', 'font-semibold');
          activeLink.querySelector('span').classList.add('bg-[#0088a9]');
        } else if (solutionId === 'agencias') {
          activeLink.classList.add('text-black', 'font-semibold');
          activeLink.querySelector('span').classList.add('bg-black');
        }

        activeLink.querySelector('span').classList.remove('bg-transparent');

        // En móvil, mostrar la tarjeta correspondiente
        if (window.innerWidth < 768) {
          // Ocultar todas las tarjetas móviles
          Object.values(mobileSolutionCards).forEach(card => {
            card.classList.add('hidden');
            card.classList.remove('block');
          });
          
          // Mostrar la tarjeta móvil correspondiente
          mobileSolutionCards[solutionId].classList.remove('hidden');
          mobileSolutionCards[solutionId].classList.add('block');
        } else {
          // En desktop, usar la lógica original
          // Ocultar todas las tarjetas
          solutionCards.forEach(card => {
            card.classList.remove('opacity-100');
            card.classList.add('opacity-0');
          });
          
          // Mostrar la tarjeta correspondiente
          const activeCard = document.getElementById('solution-' + solutionId);
          activeCard.classList.remove('opacity-0');
          activeCard.classList.add('opacity-100');
        }
      }

      // Función para actualizar las tarjetas basadas en el scroll (solo en desktop)
      function updateCardsOnScroll() {
        // No aplicar la lógica de scroll en móviles
        if (window.innerWidth < 768) {
          return;
        }
        
        // Obtener la posición de scroll relativa a la sección
        const sectionRect = solutionsSection.getBoundingClientRect();
        const containerRect = solutionsContainer.getBoundingClientRect();

        // Si la sección no está visible, no hacer nada
        if (containerRect.bottom < 0 || containerRect.top > window.innerHeight) {
          return;
        }

        // Calcular el progreso del scroll dentro del contenedor (0 a 1)
        const containerHeight = containerRect.height;
        const scrollPosition = Math.max(0, -containerRect.top);
        // Ajustamos el cálculo del progreso para que la última tarjeta aparezca antes
        // y permanezca visible durante más tiempo
        const scrollProgress = Math.min(1, scrollPosition / (containerHeight * 0.6));

        // Calcular qué tarjeta debe estar activa basada en el progreso
        let activeIndex;
        let activeId;
        if (scrollProgress < 0.4) {
          activeIndex = 0; // Primera tarjeta
          activeId = 'prendarios';
        } else if (scrollProgress < 0.7) {
          activeIndex = 1; // Segunda tarjeta
          activeId = 'particulares';
        } else {
          activeIndex = 2; // Tercera tarjeta (permanece más tiempo)
          activeId = 'agencias';
        }

        // Actualizar la opacidad de cada tarjeta
        solutionCards.forEach((card, index) => {
          if (index === activeIndex) {
            // Activar la tarjeta correspondiente
            card.classList.remove('opacity-0');
            card.classList.add('opacity-100');
          } else {
            // Desactivar las demás tarjetas
            card.classList.remove('opacity-100');
            card.classList.add('opacity-0');
          }
        });

        // Actualizar los enlaces con los colores correspondientes
        Object.entries(solutionLinks).forEach(([id, link]) => {
          link.classList.remove('text-primary', 'text-[#0088a9]', 'text-black', 'font-semibold');
          link.classList.add('text-gray-500');
          link.querySelector('span').classList.remove('bg-primary', 'bg-[#0088a9]', 'bg-black');
          link.querySelector('span').classList.add('bg-transparent');

          if (id === activeId) {
            link.classList.remove('text-gray-500');

            if (id === 'prendarios') {
              link.classList.add('text-primary', 'font-semibold');
              link.querySelector('span').classList.add('bg-primary');
            } else if (id === 'particulares') {
              link.classList.add('text-[#0088a9]', 'font-semibold');
              link.querySelector('span').classList.add('bg-[#0088a9]');
            } else if (id === 'agencias') {
              link.classList.add('text-black', 'font-semibold');
              link.querySelector('span').classList.add('bg-black');
            }

            link.querySelector('span').classList.remove('bg-transparent');
          }
        });
      }

      // Escuchar eventos de scroll (solo en desktop)
      window.addEventListener('scroll', updateCardsOnScroll);
      
      // Escuchar cambios de tamaño de ventana
      window.addEventListener('resize', function() {
        // Reiniciar la visualización cuando cambia el tamaño de la ventana
        if (window.innerWidth < 768) {
          // En móvil, mostrar la tarjeta activa
          const activeLink = Object.entries(solutionLinks).find(([id, link]) => 
            link.classList.contains('text-primary') || 
            link.classList.contains('text-[#0088a9]') || 
            link.classList.contains('text-black')
          );
          
          if (activeLink) {
            const activeId = activeLink[0];
            showSolution(activeId);
          }
        } else {
          // En desktop, actualizar la visualización basada en scroll
          updateCardsOnScroll();
        }
      });

      // Llamar a la función una vez para inicializar
      updateCardsOnScroll();

      // También permitir la navegación por clic en los enlaces
      Object.entries(solutionLinks).forEach(([solutionId, link]) => {
        link.addEventListener('click', function(e) {
          e.preventDefault();
          showSolution(solutionId);

          // Opcional: hacer scroll a la posición correspondiente (solo en desktop)
          if (window.innerWidth >= 768) {
            const card = document.getElementById('solution-' + solutionId);
            const index = parseInt(card.getAttribute('data-index'));
            const containerHeight = solutionsContainer.offsetHeight;
            const scrollTarget = solutionsSection.offsetTop + (containerHeight * (index + 0.5) / solutionCards.length);
            
            window.scrollTo({
              top: scrollTarget,
              behavior: 'smooth'
            });
          }
        });
      });
    });
  </script>
</section>






