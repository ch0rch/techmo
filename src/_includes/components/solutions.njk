  <script>
    function showSolution(solutionId) {
      // Desactiva todos los links
      document.querySelectorAll('#solutions-section ul li a').forEach(link => {
        link.classList.remove('text-primary', 'font-semibold');
        link.classList.add('text-gray-500');
        link.querySelector('span').classList.remove('bg-primary');
        link.querySelector('span').classList.add('bg-transparent');
      });

      // Activa el link correspondiente
      const activeLink = document.getElementById('link-' + solutionId);
      activeLink.classList.remove('text-gray-500');
      activeLink.classList.add('text-primary', 'font-semibold');
      activeLink.querySelector('span').classList.remove('bg-transparent');
      activeLink.querySelector('span').classList.add('bg-primary');

      // Oculta todas las tarjetas
      document.querySelectorAll('.solution-card').forEach(card => {
        card.classList.add('opacity-0');
        card.classList.remove('opacity-100');
      });

      // Muestra la tarjeta correspondiente
      const activeCard = document.getElementById('solution-' + solutionId);
      activeCard.classList.remove('opacity-0');
      activeCard.classList.add('opacity-100');
    }

    // Inicialización: Muestra la primera solución al cargar la página
    document.addEventListener('DOMContentLoaded', () => {
      showSolution('prendarios');
    });
